---
import TagList from "../TagList.astro";
import type { GuideFrontmatter } from "@types";
import DownArrowIcon from "../icons/DownArrowIcon.astro";

type Props = GuideFrontmatter;

const {
  title,
  subtitle,
  description,
  tags,
  image: { src, alt },
} = Astro.props;
---

<header
  class="grid w-full grid-cols-1 border-b border-neutral-900 md:grid-cols-12"
>
  <div class="h-[500px] overflow-hidden bg-sky-100 md:col-span-7">
    <img src={src} alt={alt} class="w-full object-cover object-bottom" />
    <!-- <Image
      src="/assets/goran-ivos-kQIaF3iPLS4-unsplash.jpg"
      alt="making coffee"
      width={1000}
      height={1000}
      fit="cover"
      position="attention"
    /> -->
  </div>
  <div class="mx-auto max-w-2xl py-24 px-8 md:col-span-5">
    <TagList tags={tags} />

    <h1 class="mt-6 text-4xl">
      <span class="block font-bold">{title}</span>
      {subtitle && <span class="block font-serif italic">{subtitle}</span>}
    </h1>

    <p class="mt-4 mb-8 text-xl">
      {description}
    </p>

    <button
      class="flex items-center justify-center border border-neutral-900 px-6 py-2 text-lg font-semibold transition-all ease-in-out hover:bg-neutral-900 hover:text-white"
    >
      <span>Check it out</span>
      <DownArrowIcon class="h-5 w-5 stroke-2 ml-2" />
    </button>
  </div>
</header>
