---
import type { CollectionEntry } from "astro:content";
import ArrowUpRightIcon from "./icons/ArrowUpRightIcon.astro";
import TagList from "./TagList.astro";

interface Props {
  guide: CollectionEntry<"guides">;
}

const { guide } = Astro.props;
const { data, slug } = guide;
---

<a href={`/guides/${slug}`} class="group">
  <article class="flex flex-col">
    <div class="aspect-w-5 aspect-h-5">
      <img
        src={data.image.src}
        alt={data.image.alt}
        class="object-cover object-center"
      />
    </div>
    <div class="mt-3">
      <div class="relative pr-9">
        <h2
          class="mb-1.5 truncate text-xl font-bold tracking-tight group-hover:underline group-hover:underline-offset-4"
        >
          {data.title}
        </h2>
        <div class="absolute inset-y-0 right-0 flex items-center">
          <ArrowUpRightIcon
            class="h-5 w-5 stroke-2 text-neutral-600 group-hover:text-neutral-800 transition-all ease-out"
          />
        </div>
      </div>
      <p class="text-neutral-600">{data.description}</p>
      <div class="mt-3">
        <TagList tags={data.tags} />
      </div>
    </div>
  </article>
</a>
